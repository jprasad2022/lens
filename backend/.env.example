# API Configuration
DEBUG=true
SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
# For Confluent Cloud/Aiven/etc:
# KAFKA_SECURITY_PROTOCOL=SASL_SSL
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_API_KEY=your-kafka-api-key
# KAFKA_API_SECRET=your-kafka-api-secret
KAFKA_GROUP_ID=movielens-recommender

# Kafka Topics
KAFKA_WATCH_TOPIC=movielens.watch
KAFKA_RATE_TOPIC=movielens.rate
KAFKA_RECO_REQUESTS_TOPIC=movielens.reco_requests
KAFKA_RECO_RESPONSES_TOPIC=movielens.reco_responses

# Model Configuration
MODEL_REGISTRY_PATH=model_registry
DEFAULT_MODEL=popularity
MODEL_CACHE_SIZE=3

# Data Paths
DATA_PATH=data
MOVIELENS_PATH=data/ml-1m
SNAPSHOT_PATH=data/snapshots

# Redis Configuration (Optional)
# REDIS_URL=redis://localhost:6379
# ENABLE_REDIS_CACHE=true
REDIS_TTL=3600

# Cloud Storage (Optional)
STORAGE_PROVIDER=local
# For Google Cloud Storage:
# STORAGE_PROVIDER=gcs
# GCS_BUCKET=your-bucket-name
# For AWS S3:
# STORAGE_PROVIDER=s3
# AWS_S3_BUCKET=your-bucket-name

# Firebase Auth (Optional)
# FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
# ENABLE_AUTH=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
# ENABLE_TRACING=true
# OTEL_ENDPOINT=http://localhost:4317

# Model Training
RETRAIN_SCHEDULE=0 2 * * *
MIN_TRAINING_SAMPLES=1000
TEST_SPLIT_RATIO=0.2

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Response Configuration
MAX_RECOMMENDATIONS=100
DEFAULT_RECOMMENDATION_COUNT=20
RESPONSE_CACHE_TTL=300

# A/B Testing
ENABLE_AB_TESTING=true
AB_TEST_PERCENTAGE=0.5